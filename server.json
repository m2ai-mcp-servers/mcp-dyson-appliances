{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.m2ai-mcp-servers/mcp-dyson-appliances",
  "description": "MCP server for controlling Dyson air purifiers and fans",
  "repository": {
    "url": "https://github.com/m2ai-mcp-servers/mcp-dyson-appliances",
    "source": "github"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "mcp-dyson-appliances",
      "version": "1.0.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "DYSON_EMAIL",
          "description": "Your Dyson account email",
          "isRequired": true,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "DYSON_PASSWORD",
          "description": "Your Dyson account password",
          "isRequired": true,
          "format": "string",
          "isSecret": true
        },
        {
          "name": "DYSON_COUNTRY",
          "description": "Country code (US, GB, DE, FR, AU, CN)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        }
      ]
    }
  ]
}
